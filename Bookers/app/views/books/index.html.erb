<h1>Books</h1>

<% @books.each do |books| %>
<table>
    <thread>
        <tr>Title</tr>
        <tr>Body</tr>
    </thread>
    <tbody>
        <td><%= books.title %></td>
        <td><%= books.body %></td>
        <td><%= link_to "Show", book_path(books.id) %></td>
        <td><%= link_to "Edit", edit_book_path(books) %></td>
        <td><%= link_to "Destroy", book_path(books.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tbody>
</table>
<% end %>


<!--投稿部分 -->
<h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
<%= render partial: "error_message" %>
    <h4>Title</h4>
    <%= f.text_field :title %></br>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <br><%= f.submit "Create Book" %></br>
<% end %>
