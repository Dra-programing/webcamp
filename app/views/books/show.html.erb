<body>
  <div class="body">
    <div class="container">
      <div class="row">
        <div class="col-xs-3">
          <%= render "layouts/list", book: @book, user: @user %>
        </div>
        <div class="col-xs-9 offset-md-1">
          <h2>Book detail</h2>
          <table class="table table-hover table-inverse">
            <tbody>
              <tr>
                <td>
                  <%= link_to user_path(@user.id) do %>
                    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "attachment user profile_image fallback", fallback: "no_image.jpg", size:'50x50' %>
                    <br><%= @user.name %>
                  <% end %>
                </td>
                <td><%= link_to @books.title, book_path(@books.id) %></th>
                <td><%= @books.body %></th>
                <% if @books.user == current_user %>
                  <td><%= link_to "Edit", edit_book_path(@books) %></td>
                  <td><%= link_to "Destroy", book_path(@books.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>

