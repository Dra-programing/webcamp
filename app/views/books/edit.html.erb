<div class="body">
  <div class="container">
    <%= render partial: "error_message" %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1>Editing Book</h1>
        <%= form_with model: @book, local: true do |f| %>
          <div class="field row">
            <h3>Title</h3>
            <%= f.text_field :title, class: "col-xs-12 book-title" %>
          </div>
          <div class="field row">
            <h3>Opinion</h3>
            <%= f.text_area :body, class: "col-xs-12 book_body" %>
          </div>
          <div class="actions row">
            <%= f.submit "Update Book", class: "btn btn-primary col-xs-12" %>
          </div>
        <% end %>
        <%= link_to "Show", book_path(@book) %>
        <%= link_to "Back", "/books" %>
      </div>
    </div>
  </div>
</div>