<body>
  <div class="body">
    <div class="container">
      <div class="row">
        <div class="col-xs-3">
          <%= render "layouts/list", book: @book, user: @user %>
        </div>
        <div class="col-xs-9">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <th>
                    <%= link_to user_path(@user.id) do %>
                      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "attachment user profile_image fallback", fallback: "no_image.jpg", size:'50x50' %>
                    <% end %>
                  </th>
                  <th><%= link_to book.title, book_path(book) %></th>
                  <th><%= book.body %></th>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>
