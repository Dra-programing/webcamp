<div class="body">
  <div class="container">
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>
    <div class="row">
      <li class="top-message col-md-offset-3 col-md-6">
        <h1>Welcome to
        <span class="glyphicon glyphicon-book"><strong>Bookers</strong>  !!</span>
        </h1>
        <p>In <span class="glyphicon glyphicon-book"></span>Bookers,</p>
        <p>you can share and exchange  your opinions , impressions , and emotions</p>
        <p>about valious books!</p>

        <div class="btn-wrapper">
          <div class="row">
            <% if user_signed_in? %>
              <%= link_to "Log in", user_path(@user.id), class: "btn btn-info col-xs-10 col-xs-offset-1 sign_in" %>
            <% else %>
              <%= link_to "Log in", new_user_session_path, class: "btn btn-info col-xs-10 col-xs-offset-1 sign_in" %>
            <% end %>
          </div>
          <div class="row">
            <% if user_signed_in? %>
              <%= link_to "Sign Up", user_path(@user.id), class: "btn btn-info col-xs-10 col-xs-offset-1 sign_up" %>
            <% else %>
              <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-info col-xs-10 col-xs-offset-1 sign_up" %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>