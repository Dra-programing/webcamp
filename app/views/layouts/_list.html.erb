
  <div class="container">
      <% if flash[:notice] %>
        <p><%= flash[:notice] %></p>
      <% end %>
    <div class="row">
        <div class="col-xs-3">
          <h2>User info</h2>
          <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                <th><p>name</p></th>
                <th><%= user.name %></th>
              </tr>
              <tr>
                <th><p>introduction</p></th>
                <th><%= user.introduction %></th>
              </tr>
            </tbody>
          </table>
          <div class="row">
              <%= link_to edit_user_path(user), class: "col-xs-12 btn btn-default" do %>
                <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
              <% end %>
          </div>
          
       <h2>New book</h2>
       <%= form_with model: book, local:true do |f| %>
       <%= render partial: "error_message" %>
         <div class="field row">
          <h4>Title</h4>
          <%= f.text_field :title %></br>
         </div>
         <div class="field row">
          <h4>Body</h4>
          <%= f.text_area :body %>
         </div>
         <div class="actions row">
          <%= f.submit "Create Book", class: "btn btn-primary col-xs-12" %>
         </div>
       <% end %>
      </div>
    </div>
  </div>
  